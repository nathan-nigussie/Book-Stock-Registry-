<!-- include header -->
<%- include("layout/header")%>
    <!-- /include header -->

    <div class="container">
        <div class="row my-4">
            <div class="col-lg-12">
                <% if(message){ %>
                    <div class="alert alert-secondary alert-dismissible fade show alert-<%=message.type %>"
                        role="alert">

                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
                        </button>
                        <strong>
                            <%= message.message %>
                        </strong>
                    </div>
                    <% } %>
                        <div class="table-responsive ">
                            <% if(books !="" ){ %>
                                <table class="table table-striped ">
                                    <thead>
                                        <tr class="table-dark ">
                                            <th>
                                                ID
                                            </th>
                                            <th>Image</th>
                                            <th>Title</th>
                                            <th>Genre</th>
                                            <th>Description</th>
                                            <th>Publication Year</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% books.forEach((row,index)=> { %>


                                            <tr class="align-middle">
                                                <td>
                                                    <%= index %>
                                                </td>
                                                <td><img src="<%= row.image %>" class="img-thumbnail" width="70">
                                                </td>
                                                <td>
                                                    <%= row.title %>
                                                </td>
                                                <td>
                                                    <%= row.genre %>
                                                </td>
                                                <td>
                                                    <%= row.description %>
                                                </td>
                                                <td>
                                                    <%= moment(row.publicationYear).format( 'MMM-DD-YYYY' ) %>
                                                </td>
                                                <td>
                                                    <a href="/edit/<%= row._id %>" class="text-success"><i
                                                            class="fas fa-edit fa-lg mx-1"></i></a>
                                                    <a href="/delete/<%= row._id %>" class="text-danger"><i
                                                            class="fas fa-trash fa-lg mx-1"></i></a>

                                                </td>
                                            </tr>
                                            <% }) %>
                                    </tbody>
                                </table>
                                <% } else { %>
                                    <h1 class="text-center text-secondary mt-5">No books found in the database!</h1>
                                    <% } %>
                        </div>


            </div>
        </div>
    </div>

    <!-- include footer -->
    <%- include("layout/footer")%>
        <!-- /include footer-->